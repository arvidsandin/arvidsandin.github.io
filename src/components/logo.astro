---
const { size, link, logo, alt, rel_me } = Astro.props;
---

<a
  href={link}
  class="logo"
  target="_blank"
  rel={`noopener noreferrer${rel_me ? " me" : ""}`}
  ><img
    src={logo.src}
    style={{ height: `${size || "32px"}`, width: `${size || "32px"}` }}
    alt={alt}
  />
</a>
<style>
  .logo {
    display: inline-block;
    padding: 0 0.225em 0 0;
    filter: var(--filter);
  }

  /* TODO: make something that works with .darkenOnHover instead*/
  .logo:hover {
    filter: invert(0.5);
  }
</style>
