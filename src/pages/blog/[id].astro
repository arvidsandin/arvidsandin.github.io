---
import type { BlogEntry } from "../../content.config";
import { getCollection, render } from "astro:content";
export async function getStaticPaths() {
  const posts: BlogEntry[] = await getCollection("blog");
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}
const { post } = Astro.props;
const { Content } = await render(post);

import NavigationBarBlogEntry from "../../components/navigationbar_blogEntry.astro";
import Wrapper from "../../components/wrapper.astro";
import Footer from "../../components/footer.astro";
import EditNote from "../../components/editnote.astro";
import "../../styles/global.css";
import "../../styles/prism-okaidia.css";
import Head from "../../components/head.astro";
---

<Head
  title={post.data.title}
  pathname={"/blog" + post.data.slug}
  description={post.data.description}
  const
  image={"/blog" + post.data.image}
>
  <div>
    <NavigationBarBlogEntry />
    <Wrapper
      leftSidebarClass="sidebar-small"
      header={post.data.title}
      date={post.data.date}
    >
      <div class="scale-image">
        <Content />
      </div>
      <EditNote edited={post.data.lastChanged} created={post.data.date} />
      <Footer />
    </Wrapper>
  </div>
  <style>
    img {
      width: 100%;
      height: 100%;
    }
  </style>
</Head>
